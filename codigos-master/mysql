INSERT INTO escola_serie(id_escola, id_serie) SELECT escolas.id AS id_escola, series.id AS id_serie FROM escola_serie INNER JOIN escolas ON escolas.id = escola_serie.id_escola INNER JOIN series ON series.id = escola_serie.id_serie WHERE escolas.nome = 'Colégio FG' AND series.nome = '6º ao 9º ano'
SELECT escolas.id FROM escolas INNER JOIN escola_serie ON escolas.id = escola_serie.id_escola WHERE escolas.nome = "Colégio FG"



SELECT escolas.id AS id_escola, series.id 
FROM escola_serie 

INNER JOIN escolas 
ON escolas.id = escola_serie.id_escola 

INNER JOIN series 
ON series.id = escola_serie.id_serie 

WHERE escolas.nome = 'Colégio FG' 
AND series.nome = '6º ao 9º ano'
